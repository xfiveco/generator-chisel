{% extends "base.twig" %}

{% block content %}
  <article id="post-{{ post.ID }}" class="{{ post.class }}">
    <section class="o-wrapper__inner c-page">
      <div class="c-content">
        <h1>{{ post.title }}</h1>
        <p>{{ post.content }}</p>

        <div class="site-container">
          <h2 class="demo-title">Form elements</h2>
          <h4 class="demo-subtitle">Styled with pure CSS</h4>
          <form class="form">
            <div class="form-row">
              <div class="form-cell">
                <label for="text">Text</label>
                <input placeholder="A text input" type="text" id="text" value="" />
              </div>
              <div class="form-cell">
                <label for="text-required">Required Text</label>
                <input required placeholder="A required text input" type="text" id="text-required" value="" />
              </div>
              <div class="form-cell">
                <label for="text-readonly">Read-only Text</label>
                <input readonly placeholder="A read-only text input" type="text" id="text-readonly" value="Read-only value" />
              </div>
              <div class="form-cell">
                <label for="text-disabled">Disabled Text</label>
                <input disabled placeholder="A disabled text input" type="text" id="text-disabled" value="Disabled value" />
              </div>
            </div>
            <div class="form-row">
              <div class="form-cell">
                <label for="email">Email</label>
                <input placeholder="you@example.tld" type="email" id="email" value="" />
              </div>
              <div class="form-cell">
                <label for="email-required">Required email</label>
                <input required placeholder="you@example.tld (required)" type="email" id="email-required" value="" />
              </div>
              <div class="form-cell">
                <label for="email-readonly">Read-only email</label>
                <input readonly placeholder="you@example.tld (read-only)" type="email" id="email-readonly" value="Read-only value" />
              </div>
              <div class="form-cell">
                <label for="email-disabled">Disabled Email</label>
                <input disabled placeholder="you@example.tld (disabled)" type="email" id="email-disabled" value="Disabled value" />
              </div>
            </div>
            <!-- Number -->
            <div class="form-row">
              <div class="form-cell">
                <label for="number">Number</label>
                <input placeholder="A number input" type="number" id="number" value="" />
              </div>
              <div class="form-cell">
                <label for="number-required">Required Number</label>
                <input required placeholder="A required number input" type="number" id="number-required" value="" />
              </div>
              <div class="form-cell">
                <label for="number-readonly">Read-only Number</label>
                <input readonly placeholder="A read-only number input" type="number" id="number-readonly" value="9" />
              </div>
              <div class="form-cell">
                <label for="number-disabled">Disabled Number</label>
                <input disabled placeholder="A disabled number input" type="number" id="number-disabled" value="9" />
              </div>
            </div>
            <!-- URL -->
            <div class="form-row">
              <div class="form-cell">
                <label for="url">URL</label>
                <input placeholder="A URL input" type="url" id="url" value="" />
              </div>
              <div class="form-cell">
                <label for="url-required">Required URL</label>
                <input required placeholder="A required URL input" type="url" id="url-required" value="" />
              </div>
              <div class="form-cell">
                <label for="url-readonly">Read-only URL</label>
                <input readonly placeholder="A read-only URL input" type="url" id="url-readonly" value="https://example.tld" />
              </div>
              <div class="form-cell">
                <label for="url-disabled">Disabled URL</label>
                <input disabled placeholder="A disabled URL input" type="url" id="url-disabled" value="https://example.tld" />
              </div>
            </div>

            <!-- Telephone -->
            <div class="form-row">
              <div class="form-cell">
                <label for="tel">Telephone</label>
                <input placeholder="A telephone input" type="tel" id="tel" value="" />
              </div>
              <div class="form-cell">
                <label for="tel-required">Required Telephone</label>
                <input required placeholder="A required telephone input" type="tel" id="tel-required" value="" />
              </div>
              <div class="form-cell">
                <label for="tel-readonly">Read-only Telephone</label>
                <input readonly placeholder="A read-only telephone input" type="tel" id="tel-readonly" value="+919191919191" />
              </div>
              <div class="form-cell">
                <label for="tel-disabled">Disabled Telephone</label>
                <input disabled placeholder="A disabled telephone input" type="tel" id="tel-disabled" value="+919191919191" />
              </div>
            </div>
            <!-- Password -->
            <div class="form-row">
              <div class="form-cell">
                <label for="password">Password</label>
                <input placeholder="A password input" type="password" id="password" value="" />
              </div>
              <div class="form-cell">
                <label for="password-required">Required Password</label>
                <input required placeholder="A required password input" type="password" id="password-required" value="" />
              </div>
              <div class="form-cell">
                <label for="password-readonly">Read-only Password</label>
                <input readonly placeholder="A read-only password input" type="password" id="password-readonly" value="Read-only value" />
              </div>
              <div class="form-cell">
                <label for="password-disabled">Disabled Password</label>
                <input disabled placeholder="A disabled password input" type="password" id="password-disabled" value="Disabled value" />
              </div>
            </div>

            <!-- Search -->
            <div class="form-row">
              <div class="form-cell">
                <label for="search">Search</label>
                <input placeholder="A search input" type="search" id="search" value="" />
              </div>
              <div class="form-cell">
                <label for="search-required">Required Search</label>
                <input required placeholder="A required search input" type="search" id="search-required" value="" />
              </div>
              <div class="form-cell">
                <label for="search-readonly">Read-only Search</label>
                <input readonly placeholder="A read-only search input" type="search" id="search-readonly" value="Read-only value" />
              </div>
              <div class="form-cell">
                <label for="search-disabled">Disabled Search</label>
                <input disabled placeholder="A disabled search input" type="search" id="search-disabled" value="Disabled value" />
              </div>
            </div>

            <!-- Time -->
            <div class="form-row">
              <div class="form-cell">
                <label for="time">Time</label>
                <input placeholder="A time input" type="time" id="time" value="" />
              </div>
              <div class="form-cell">
                <label for="time-required">Required Time</label>
                <input required placeholder="A required time input" type="time" id="time-required" value="" />
              </div>
              <div class="form-cell">
                <label for="time-readonly">Read-only Time</label>
                <input readonly placeholder="A read-only time input" type="time" id="time-readonly" value="18:00" />
              </div>
              <div class="form-cell">
                <label for="time-disabled">Disabled Time</label>
                <input disabled placeholder="A disabled time input" type="time" id="time-disabled" value="18:00" />
              </div>
            </div>
            <!-- Date -->
            <div class="form-row">
              <div class="form-cell">
                <label for="date">Date</label>
                <input placeholder="A date input" type="date" id="date" value="" />
              </div>
              <div class="form-cell">
                <label for="date-required">Required Date</label>
                <input required placeholder="A required date input" type="date" id="date-required" value="" />
              </div>
              <div class="form-cell">
                <label for="date-readonly">Read-only Date</label>
                <input readonly placeholder="A read-only date input" type="date" id="date-readonly" value="2024-02-20" />
              </div>
              <div class="form-cell">
                <label for="date-disabled">Disabled Date</label>
                <input disabled placeholder="A disabled date input" type="date" id="date-disabled" value="2024-02-20" />
              </div>
            </div>

            <!-- Date and Time -->
            <div class="form-row">
              <div class="form-cell">
                <label for="datetime-local">Date and Time</label>
                <input placeholder="A date and time input" type="datetime-local" id="datetime-local" value="" />
              </div>
              <div class="form-cell">
                <label for="datetime-required">Required Date and Time</label>
                <input required placeholder="A required date and time input" type="datetime-local" id="datetime-required" value="" />
              </div>
              <div class="form-cell">
                <label for="datetime-readonly">Read-only Date and Time</label>
                <input readonly placeholder="A read-only date and time input" type="datetime-local" id="datetime-readonly" value="2024-02-20T18:00" />
              </div>
              <div class="form-cell">
                <label for="datetime-disabled">Disabled Date and Time</label>
                <input disabled placeholder="A disabled date and time input" type="datetime-local" id="datetime-disabled" value="2024-02-20T18:00" />
              </div>
            </div>

            <!-- Month -->
            <div class="form-row">
              <div class="form-cell">
                <label for="month">Month</label>
                <input placeholder="A month input" type="month" id="month" value="" />
              </div>
              <div class="form-cell">
                <label for="month-required">Required Month</label>
                <input required placeholder="A required month input" type="month" id="month-required" value="" />
              </div>
              <div class="form-cell">
                <label for="month-readonly">Read-only Month</label>
                <input readonly placeholder="A read-only month input" type="month" id="month-readonly" value="2024-02" />
              </div>
              <div class="form-cell">
                <label for="month-disabled">Disabled Month</label>
                <input disabled placeholder="A disabled month input" type="month" id="month-disabled" value="2024-02" />
              </div>
            </div>

            <!-- Week -->
            <div class="form-row">
              <div class="form-cell">
                <label for="week">Week</label>
                <input placeholder="A week input" type="week" id="week" value="" />
              </div>
              <div class="form-cell">
                <label for="week-required">Required Week</label>
                <input required placeholder="A required week input" type="week" id="week-required" value="" />
              </div>
              <div class="form-cell">
                <label for="week-readonly">Read-only Week</label>
                <input readonly placeholder="A readonly week input" type="week" id="week-readonly" value="2024-W06" />
              </div>
              <div class="form-cell">
                <label for="week-disabled">Disabled Week</label>
                <input disabled placeholder="A disabled week input" type="week" id="week-disabled" value="2024-W06" />
              </div>
            </div>

            <!-- Range -->
            <div class="form-row">
              <div class="form-cell">
                <label for="range">Range</label>
                <input placeholder="A range input" type="range" id="range" value="" />
              </div>

              <div class="form-cell">
                <label for="range-disabled">Disabled Range</label>
                <input disabled placeholder="A disabled range input" type="range" id="range-disabled" value="Disabled value" />
              </div>
            </div>

            <!-- File -->
            <div class="form-row">
              <div class="form-cell">
                <label for="file">File</label>
                <input placeholder="A file input" type="file" id="file" value="" />
              </div>

              <div class="form-cell">
                <label for="file-disabled">Disabled File</label>
                <input disabled placeholder="A disabled file input" type="file" id="file-disabled" value="Disabled value" />
              </div>
            </div>

            <!-- Select -->
            <div class="form-row">
              <div class="form-cell">
                <label for="select">Select</label>
                <select id="select">
                  <option value="option1">Option 1</option>
                  <option value="option2">Option 2</option>
                  <option value="option3">Option 3</option>
                </select>
              </div>
              <div class="form-cell">
                <label for="select-disabled">Disabled Select</label>
                <select id="select-disabled" disabled>
                  <option value="option1">Option 1</option>
                  <option value="option2">Option 2</option>
                  <option value="option3">Option 3</option>
                </select>
              </div>
            </div>

            <div class="form-row">
              <div class="form-cell">
                <label for="select-multiple">Multiple select</label>
                <select id="select-multiple" multiple>
                  <option value="option1">Option 1</option>
                  <option value="option2">Option 2</option>
                  <option value="option3">Option 3</option>
                </select>
              </div>
              <div class="form-cell">
                <label for="select-multiple-disabled">Disabled multiple Select</label>
                <select id="select-disabled" disabled multiple>
                  <option value="option1">Option 1</option>
                  <option value="option2">Option 2</option>
                  <option value="option3">Option 3</option>
                </select>
              </div>
            </div>

            <!-- Color -->
            <div class="form-row">
              <div class="form-cell">
                <label for="color">Color</label>
                <input placeholder="A color input" type="color" id="color" value="#4834d4" />
              </div>
              <div class="form-cell">
                <label for="color-disabled">Disabled Color</label>
                <input disabled placeholder="A disabled color input" type="color" id="color-disabled" value="#4834d4" />
              </div>
            </div>

            <!-- Textarea -->
            <div class="form-row">
              <div class="form-cell">
                <label for="textarea">Textarea</label>
                <textarea placeholder="A textarea input" id="textarea"></textarea>
              </div>
              <div class="form-cell">
                <label for="textarea-required">Required Textarea</label>
                <textarea required placeholder="A required textarea input" id="textarea-required"></textarea>
              </div>
              <div class="form-cell">
                <label for="textarea-readonly">Read-only Textarea</label>
                <textarea readonly placeholder="A read-only textarea input" id="textarea-readonly">Read-only value</textarea>
              </div>
              <div class="form-cell">
                <label for="textarea-disabled">Disabled Textarea</label>
                <textarea disabled placeholder="A disabled textarea input" id="textarea-disabled">Disabled value</textarea>
              </div>
            </div>
            <div class="form-row">
              <div class="form-cell">
                <label>Checkbox group</label>
                <label for="pie">
                  <input type="checkbox" id="pie" name="checkbox" value="" />
                  Pie</label>
                <label for="pizza">
                  <input type="checkbox" id="pizza" name="checkbox" value="" />
                  Pizza</label>
                <label for="muffin">
                  <input type="checkbox" id="muffin" name="checkbox" value="" />
                  Muffin</label>
                <label for="egg-roll">
                  <input disabled type="checkbox" id="egg-roll" name="checkbox" value="" />
                  Egg roll</label>
              </div>
              <div class="form-cell">
                <label>Radio group</label>
                <label for="margherita">
                  <input type="radio" id="margherita" name="pizza" value="option1" />
                  Margherita</label>
                <label for="sicillian">
                  <input type="radio" id="sicillian" name="pizza" value="" />
                  Sicillian</label>
                <label for="pepperoni">
                  <input type="radio" id="pepperoni" name="pizza" value="" />
                  Pepperoni</label>
                <label for="chicago-style">
                  <input disabled type="radio" id="chicago-style" name="pizza" value="" />
                  Chicago-style</label>
              </div>
            </div>

            <div class="form-row">
              <div class="form-cell btn-group">
                <input type="submit" value="Submit" />
                <input type="reset" value="Reset" />
                <input type="button" onclick="javascript:;" value="Regular Button" />
                <button type="button">Another regular Button</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>
  </article>
{% endblock %}

