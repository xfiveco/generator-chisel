{
  "name": "<%= nameSlug %>",
  "version": "0.0.1",
  "author": "<%= author %>",
  "description": "<%= nameSlug %>",
  "scripts": {
    "build": "gulp build",
    "lint": "gulp lint-js && gulp lint-css"
  },
  "chisel": {
    "src": {
      "assets": "assets/**/*",
      "app": "scripts/app.js",
      "base": "src",
      "dataPath": "data/",
      "scripts": "scripts/**/*",
      "styles": "styles/**/*",
      "stylesMain": "styles/*.scss",
      "templatesBuild": [
        "templates/*.{twig,html}"
      ],
      "templatesWatch": [
        "templates/**/*.{twig,html}",
        "data/**.json"
      ],
      "templatesPath": "templates/"
    },
    "dest": {<% if (projectType == 'wp-with-fe') { %>
      "wordpress": "wp",
      "wordpressTheme": "<%= nameSlug %>",<% } %>
      "assets": "assets",
      "base": "dist",
      "revManifest": "rev-manifest.json",
      "scripts": "scripts",
      "styles": "styles"
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.5.1",<% if (features.has_babel) { %>
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",<% } %>
    "browser-sync": "^2.17.5",
    "browserify": "^13.1.0",
    "del": "^2.2.2",
    "glob": "^7.1.1",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^2.0.13",
    "gulp-data": "^1.2.1",
    "gulp-eslint": "^3.0.1",
    "gulp-filter": "^4.0.0",
    "gulp-htmlhint": "^0.3.1",
    "gulp-load-plugins": "^1.3.0",
    "gulp-newer": "^1.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.2.0",
    "gulp-prettify": "^0.5.0",
    "gulp-rev": "^7.1.2",
    "gulp-rev-replace": "^0.4.3",
    "gulp-sass": "^2.3.2",
    "gulp-sass-glob": "^1.0.6",
    "gulp-sequence": "^0.4.6",
    "gulp-sourcemaps": "^2.1.1",
    "gulp-stylelint": "^3.7.0",<% if (projectType == 'fe') { %>
    "gulp-twig-up-to-date": "^0.6.1",<% } %>
    "gulp-uglify": "^2.0.0",
    "pre-commit": "^1.2.2",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "normalize-scss": "^5.0.4"<% if (features.has_jquery) { %>,
    "jquery": "^3.1.1"<% } %>
  },
  "pre-commit": [
    "lint"
  ]
}
