{
  "name": "<%= nameSlug %>",
  "version": "0.0.1",
  "author": "<%= author %>",
  "description": "<%= nameSlug %>",
  "scripts": {
    "build": "gulp build"
  },
  "chisel": {
    "src": {
      "assets": "src/assets/**/*",
      "app": "src/scripts/app.js",
      "base": "src",
      "dataPath": "src/data/",
      "scripts": "src/scripts/**/*",
      "styles": "src/styles/**/*",
      "stylesMain": "src/styles/*.scss",
      "templates": [
        "src/templates/**/*.{twig,html}",
        "!**/_*.{twig,html}"
      ],
      "templatesPath": "src/templates/"
    },
    "dest": {
      "assets": "dist/assets",
      "base": "dist",
      "revManifest": "dist/rev-manifest.json",
      "scripts": "dist/scripts",
      "styles": "dist/styles"
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",<% if (features.has_babel) { %>
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",<% } %>
    "browser-sync": "^2.13.0",
    "browserify": "^13.0.1",
    "del": "^2.2.1",
    "glob": "^7.0.3",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^2.0.11",
    "gulp-css-globbing": "^0.1.8",
    "gulp-data": "^1.2.1",
    "gulp-eslint": "^3.0.1",
    "gulp-htmlhint": "0.3.1 ",
    "gulp-load-plugins": "^1.2.4",
    "gulp-newer": "^1.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.1.1",
    "gulp-prettify": "^0.4.0",
    "gulp-rev": "^7.1.0",
    "gulp-rev-replace": "^0.4.3",
    "gulp-sass": "^2.3.1",
    "gulp-sequence": "^0.4.6",
    "gulp-stylelint": "^3.0.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-twig-up-to-date": "^0.6.1",
    "gulp-uglify": "^1.5.4",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "normalize-scss": "^5.0.3"<% if (features.has_jquery) { %>,
    "jquery": "^3.1.0"<% } %>
  }
}
